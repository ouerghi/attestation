

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 1%;">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-user-information">
                <tbody>
                <tr>
                    <td>Nom & Prénom</td>
                    <td>{{ user.name ~ ' ' ~ user.lastName }}</td>
                </tr>
                <tr>
                    <td>Service</td>
                    <td>{{ user.service.name }}</td>
                </tr>
                <tr>
                    <td>Department:</td>
                    <td>Programming</td>
                </tr>
                <tr>
                <tr>
                    <td>Email</td>
                    <td><a href="{{ user.email }}">{{ user.email }} {{ dump(employee) }}</a></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div id="certificate" class="text-center">
                    <h1>{{ user.typeAttestation.name }}</h1><p>Slogan of thematic</p>
                </div>
                <form role="form" id="form-buscar">
                    <div class="form-group">
                        <div class="input-group">
                            <input id="1" class="form-control" type="text" name="search" placeholder="Numéro matricule..." required/>
                            <span class="input-group-btn">
                             <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-search" aria-hidden="true"></i>Chercher</button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}